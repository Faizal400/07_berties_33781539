<!doctype html>
<html>
  <head>
    <title>Users - <%= shopData.shopName %></title>
    <link rel="stylesheet" type="text/css" href="/main.css" />
  </head>
  <body>
    <h1>Registered Users</h1>

    <% if (users && users.length > 0) { %>
      <table>
        <thead>
          <tr>
            <th>Username</th>
            <th>First name</th>
            <th>Last name</th>
            <th>Email</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(function(user) { %>
            <tr>
              <td><%= user.username %></td>
              <td><%= user.first %></td>
              <td><%= user.last %></td>
              <td><%= user.email %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <p>No users found.</p>
    <% } %>

    <p><a href="/">Back to home</a></p>
  </body>
</html>